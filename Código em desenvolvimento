<script>
const produtos=[
 {nome:"Sneaker Premium",preco:499.90,img:"https://via.placeholder.com/400x300"},
 {nome:"RelÃ³gio Luxo",preco:899.90,img:"https://via.placeholder.com/400x300"},
 {nome:"Camiseta Street",preco:129.90,img:"https://via.placeholder.com/400x300"},
 {nome:"BonÃ© Gold",preco:99.90,img:"https://via.placeholder.com/400x300"},
 {nome:"Jaqueta Urban",preco:349.90,img:"https://via.placeholder.com/400x300"}
];

let carrinho=[];

function carregar(lista=produtos){
 const div=document.getElementById("produtos");
 div.innerHTML="";
 lista.forEach(p=>{
  div.innerHTML+=`
   <div class="produto">
    <img src="${p.img}">
    <h3>${p.nome}</h3>
    <span>R$ ${p.preco.toFixed(2)}</span>
    <button onclick="add('${p.nome}',${p.preco})">Adicionar</button>
   </div>`;
 });
}

function add(nome,preco){
 carrinho.push({nome,preco});
 atualizar();
}

function atualizar(){
 const itens=document.getElementById("itens");
 itens.innerHTML="";
 let total=0;
 carrinho.forEach((i,idx)=>{
  total+=i.preco;
  itens.innerHTML+=`
   <div class="item">
    <span>${i.nome} - R$ ${i.preco.toFixed(2)}</span>
    <button onclick="remover(${idx})">X</button>
   </div>`;
 });
 document.getElementById("total").innerText=total.toFixed(2);
}

function remover(i){
 carrinho.splice(i,1);
 atualizar();
}

function filtrar(){
 const t=document.getElementById("busca").value.toLowerCase();
 carregar(produtos.filter(p=>p.nome.toLowerCase().includes(t)));
}

function finalizar(){
 if(!carrinho.length){alert("Carrinho vazio");return;}
 let msg="OlÃ¡, quero finalizar minha compra:%0A";
 let total=0;
 carrinho.forEach(i=>{
  msg+=`- ${i.nome} (R$ ${i.preco.toFixed(2)})%0A`;
  total+=i.preco;
 });
 msg+=`%0ATotal: R$ ${total.toFixed(2)}`;
 window.open("https://wa.me/5599999999999?text="+msg,"_blank");
}

carregar();
</script>

